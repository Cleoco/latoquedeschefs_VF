{% extends 'base.html.twig' %}

{% block title %}Comment index{% endblock %}

{% block body %}
<style>
  h1{
        letter-spacing: 8px;
        text-transform: uppercase;
    }

    .filet{
        margin : 50px auto 100px auto;
        width:80px;
        height:15px;
        background:#18BC9C;

    }


</style>
    <div class="container">
    <h1 class="text-center mt-5">Commentaires</h1>
       <div class="filet "></div>
    <table class="table">
        <thead>
            <tr>
                <th>Auteur</th>
                <th>Contenu</th>
                <th>Image</th>
                <th>Date d'ajout</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.author }}</td>
                <td>{{ comment.content }}</td>
                <td>{{ comment.image }}</td>
                <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <button class="btn btn-primary"><a style = "color:white" href="{{ path('comment_show', {'id': comment.id}) }}">Voir</a></button>
                    <button class="btn btn-danger"><a style = "color:white"  href="{{ path('comment_delete', {'id': comment.id}) }}">Supprimer</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">pas de commentaire</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    {# <a href="{{ path('comment_new') }}">Create new</a> #}
{% endblock %}
